<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/img"
        android:layout_gravity="center"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Electricity Bill Calculation"
        android:textSize="28sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/custom"
        />
    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="8"
        >
        <TextView
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/rectangle_transparent_curved_left"
            android:text="Enter total units consumed:"
            android:gravity="left"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:textColor="@color/custom"
            android:textStyle="bold"
            />
        <EditText
            android:id="@+id/edUnit"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/rectangle_transparent_curved_right"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_gravity="center"
            android:hint="Units"
            android:textColorHint="#590093D0"
            android:textSize="25sp"
            android:padding="5dp"
            android:textColor="@color/custom"
            android:textStyle="bold"
            android:layout_marginLeft="-2dp"
            />
    </LinearLayout>
    <Button
        android:id="@+id/btnCalculate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculate Bill"
        android:textAllCaps="false"
        android:textSize="22sp"
        android:background="@drawable/curved_rectangle"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        />
    <LinearLayout
        android:id="@+id/resultLayoutAlways"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:padding="10dp"
        android:background="@drawable/rectangle_transparent_curved"
        android:visibility="visible"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Result will appear here"
            android:textColor="@color/custom"
            android:textSize="25sp"
            android:gravity="center"
            android:textStyle="italic"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/resultLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:padding="10dp"
        android:background="@drawable/rectangle_transparent_curved"
        android:visibility="gone"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your total electric bill = "
                android:textColor="@color/custom"
                android:textSize="25sp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/tvResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/custom"
                android:textSize="25sp"
                android:textStyle="bold"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Electric calculated by following:"
            android:textColor="@color/custom"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="For first 50 units BDT 0.50/unit"
            android:textColor="@color/custom"
            android:textSize="20sp"
            android:textStyle="normal"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="For next 100 units BDT 0.75/unit"
            android:textColor="@color/custom"
            android:textSize="20sp"
            android:textStyle="normal"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="For next 100 units BDT 1.20/unit"
            android:textColor="@color/custom"
            android:textSize="20sp"
            android:textStyle="normal"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="For unit above 250 BDT 1.50/unit"
            android:textColor="@color/custom"
            android:textSize="20sp"
            android:textStyle="normal"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="*An additional surcharge of 20% is added to the bill."
            android:textColor="#F44336"
            android:textSize="20sp"
            android:textStyle="italic"
            android:layout_marginTop="5dp"
            />
    </LinearLayout>

</LinearLayout>